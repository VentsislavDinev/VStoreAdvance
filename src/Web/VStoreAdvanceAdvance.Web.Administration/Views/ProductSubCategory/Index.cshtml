@model IEnumerable<HostingStore.ProductViewModel.ProductCategoryViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <a href="/Administration/ProductSubparentCategory/index/@item.Id">   @Html.DisplayFor(modelItem => item.Category)</a>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            <a href="/Administration/ProductSubparentCategory/Create/@item.Id/@item.CategoryId">   Create new sub parent category</a>
            <a href="/Administration/Product/Create/@item.Id/@item.CategoryId">   Create new product</a>
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
