                        </li>
                        <li>
                            6 offer from
                            <span class="item_price">$285.00</span>
                        </li>
                    </ul>
                </div>*@
            <div class="product-single-w3l">
                <p>
                    <i class="fa fa-hand-o-right" aria-hidden="true"></i>Информация за продукта
                </p>
                @Model.GetProductById.Description
            </div>
            <div class="occasion-cart">
                <div>
                    @using (Html.BeginForm("checkout", "home", FormMethod.Post))
                    {

                        <fieldset>
                            <input type="hidden" name="cmd" value="_cart">
                            <input type="hidden" name="add" value="1">
                            <input type="hidden" name="id" value="@Model.GetProductById.Id">
                            <input type="hidden" name="business" value=" ">
                            <input type="hidden" name="item_name" value="@Model.GetProductById.Name">
                            <input type="hidden" name="amount" value="@Model.GetProductById.Price">
                            <input type="hidden" name="discount_amount" value="0.00">
                            <input type="hidden" name="currency_code" value="BGN">
                            <input type="hidden" name="returns" value=" ">
                            <input type="hidden" name="cancel_return" value=" ">
                            <input type="submit" name="submit" value="Add to cart" onclick="notify('success')" style="font-size: 13px;color: #fff;background: #1accfd;text-decoration: none;position: relative;border: none;border-radius: 0;width: 100%;text-transform: uppercase;padding: 13px;outline: none;letter-spacing: 1px;font-weight: 600;">
                        </fieldset>
                    }
                </div>

            </div>

        </div>
        <div class="clearfix"> </div>
    </div>
