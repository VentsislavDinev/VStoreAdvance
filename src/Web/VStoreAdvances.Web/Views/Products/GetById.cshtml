                        <input id="rating1" type="radio" name="rating" value="1">
                        <label for="rating1">1</label>
                    </span>
                </div>*@
            <p>
                @if (Model.GetProductById.PromoPrice != 0 || Model.GetProductById.PromoPrice == null)
                {
                    <span class="item_price">$@Model.GetProductById.PromoPrice</span>
                    <del>$@Model.GetProductById.Price</del>
                }
                <span class="item_price">$@Model.GetProductById.Price</span>
                <script>
                    fbq('track', 'ViewContent', {
                        value: @Model.GetProductById.Price,
                        currency: 'bgn',
                    });
                </script>
                @*<label>Free delivery</label>*@
            </p>
            @*<div class="single-infoagile">
                    <ul>
                        <li>
                            Cash on Delivery Eligible.
